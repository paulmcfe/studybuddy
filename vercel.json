{
  "version": 2,
  "builds": [
    {
      "src": "v1-basic-chatbot/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "v1-basic-chatbot/frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/v1-basic-chatbot/api/index.py" },
    { "src": "/(.*)", "dest": "/v1-basic-chatbot/frontend/$1" }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "ignoreCommand": "bash scripts/should-deploy.sh"
}
