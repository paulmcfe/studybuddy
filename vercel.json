{
  "version": 2,
  "builds": [
    {
      "src": "v3-the-agent-loop/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "v3-the-agent-loop/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/v3-the-agent-loop/api/index.py" },
    { "src": "/(.*)", "dest": "/v3-the-agent-loop/frontend/$1" }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "ignoreCommand": "bash scripts/should-deploy.sh"
}
